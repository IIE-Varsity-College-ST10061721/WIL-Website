@model FeedTheFurballsMVC.Models.DonationGoal

@{
    ViewData["Title"] = "Create Donation Goal";
}

<h1>Create</h1>

<h4>Donation Goal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Month" class="control-label"></label>
                <select asp-for="Month" class="form-control" required>
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <select asp-for="Year" class="form-control" required>
                    <option value="2023">2023</option>
                    <option value="2024">2024</option>
                    <option value="2025">2025</option>
                </select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GoalAmount" class="control-label">Goal Amount</label>
                <input asp-for="GoalAmount" class="form-control" required />
                <span asp-validation-for="GoalAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalDonations" class="control-label">Total Donations</label>
                <input asp-for="TotalDonations" class="form-control" required />
                <span asp-validation-for="TotalDonations" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Goal" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
