@model List<FeedTheFurballsMVC.Models.DonationGoal>
@{
    ViewData["Title"] = "Manage Donation Goals";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Month</th>
            <th>Year</th>
            <th>Goal Amount</th>
            <th>Total Donations</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var goal in Model)
        {
            <tr>
                <td>@goal.Month</td>
                <td>@goal.Year</td>
                <td>@goal.GoalAmount.ToString("C")</td>
                <td>@goal.TotalDonations.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@goal.Id">Edit</a> |                   
                    <a asp-action="Delete" asp-route-id="@goal.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Dashboard", "Admin")" class="btn btn-primary">Back to Admin Dashboard</a>
