<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Feed the Furballs</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            color: #333;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        /* Ensure the navbar takes up the full width and height */
        .navbar {
            background-color: #642365;
            height: 100px;
            width: 100%;
            border: none; /* Remove borders */
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 600;
            padding: 15px 20px;
        }

            .navbar-nav .nav-link:hover {
                background-color: white !important;
                color: #642365 !important;
                border-radius: 4px;
            }

        .navbar-logo {
            height: 60px; /* Adjust logo height */
            width: auto; /* Keep aspect ratio */
            margin-right: auto;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md">
            <div class="container-fluid">
                <!-- Use container-fluid to ensure full width -->
                <a class="navbar-logo" asp-controller="Admin" asp-action="Login">
                    <img src="~/images/ftflogo2-white.png" alt="Logo" class="navbar-logo" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Help" asp-action="Index">How Can You Help?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Supporters" asp-action="Index">Our Suppawters</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Galleries" asp-action="PublicGallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Donation" asp-action="Index">Donation Goal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <p>&copy; 2024 Feeding The Furballs. All Rights Reserved.</p>
        <ul class="list-inline">
            <li class="list-inline-item">
                <a href="https://www.facebook.com/feedingthefurballs" target="_blank">
                    <img src="~/images/facebook.png" alt="Facebook" class="social-icon" />
                </a>
            </li>
            <li class="list-inline-item">
                <a href="https://x.com/feedthefurballs" target="_blank">
                    <img src="~/images/twitter.png" alt="Twitter" class="social-icon" />
                </a>
            </li>
            <li class="list-inline-item">
                <a href="https://www.tiktok.com/@@farrahmaharajh" target="_blank">
                    <img src="~/images/tiktok.png" alt="Twitter" class="social-icon" />
                </a>
            </li>
        </ul>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
